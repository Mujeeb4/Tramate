<%= form_with(model: api_credential, local: true) do |form| %>
  <% if api_credential.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(api_credential.errors.count, "error") %> prohibited this API credential from being saved:</h4>
      <ul>
        <% api_credential.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :label, "Name your connection (e.g. 'Main Account')" %>
    <%= form.text_field :label, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :api_key, "Binance API Key" %>
    <%= form.text_field :api_key, class: 'form-control', required: true %>
    <small class="form-text text-muted">Your API key from Binance</small>
  </div>

  <div class="form-group">
    <%= form.label :api_secret, "Binance API Secret" %>
    <%= form.password_field :api_secret, class: 'form-control', required: true %>
    <small class="form-text text-muted">Your API secret from Binance. This will be encrypted before storage.</small>
  </div>

  <div class="form-group">
    <%= form.label :ip_restriction, "IP Restriction" %>
    <%= form.text_field :ip_restriction, class: 'form-control' %>
    <small class="form-text text-muted">Optional: IP addresses you've restricted this API key to on Binance</small>
  </div>

  <%= form.hidden_field :platform, value: 'binance' %>

  <div class="form-check mb-3">
    <%= form.check_box :active, class: 'form-check-input' %>
    <%= form.label :active, class: 'form-check-label' %>
  </div>

  <div class="alert alert-info">
    <h5>Security Recommendations:</h5>
    <ul>
      <li>Create a dedicated API key for Tramate on Binance</li>
      <li>Enable IP restrictions on your API key to our server IPs</li>
      <li>Only enable reading and trading permissions (no withdrawal permissions)</li>
    </ul>
  </div>

  <div class="actions">
    <%= form.submit "Save API Connection", class: 'btn btn-primary' %>
  </div>
<% end %>