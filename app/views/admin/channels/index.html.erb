<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Channel Management</h1>
      <p class="mt-2 text-sm text-gray-600">Manage and monitor trading channels</p>
    </div>
    <%= link_to new_admin_channel_path, class: "btn-primary" do %>
      <i class="fas fa-plus mr-2"></i>Add New Channel
    <% end %>
  </div>

  <!-- Statistics -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-blue-100 text-blue-600">
          <i class="fas fa-broadcast-tower text-xl"></i>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Channels</p>
          <p class="text-2xl font-semibold text-gray-900"><%= Channel.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-green-100 text-green-600">
          <i class="fas fa-signal text-xl"></i>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Active Channels</p>
          <p class="text-2xl font-semibold text-gray-900"><%= Channel.where(status: 'active').count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-purple-100 text-purple-600">
          <i class="fas fa-users text-xl"></i>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Subscribers</p>
          <p class="text-2xl font-semibold text-gray-900"><%= ChannelAccess.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
          <i class="fas fa-chart-line text-xl"></i>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Signals</p>
          <p class="text-2xl font-semibold text-gray-900"><%= Signal.count %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Filters</h2>
      <%= form_tag admin_channels_path, method: :get, class: "space-y-4" do %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">Channel Type</label>
            <%= select_tag :channel_type,
                options_for_select([['All', ''], ['Telegram', 'telegram'], ['Discord', 'discord'], ['Webhook', 'webhook']], params[:channel_type]),
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700">Status</label>
            <%= select_tag :status,
                options_for_select([['All', ''], ['Active', 'active'], ['Inactive', 'inactive']], params[:status]),
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700">Search</label>
            <%= text_field_tag :search, params[:search],
                placeholder: "Search by name or description",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>
        </div>

        <div class="flex justify-end space-x-4">
          <%= submit_tag "Apply Filters", class: "btn-primary" %>
          <%= link_to "Clear Filters", admin_channels_path, class: "btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Channels Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subscribers</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Signals</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @channels.each do |channel| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <% if channel.logo_url.present? %>
                      <%= image_tag channel.logo_url, class: "h-10 w-10 rounded-full" %>
                    <% else %>
                      <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                        <i class="fas fa-broadcast-tower text-gray-400"></i>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= channel.name %></div>
                    <div class="text-sm text-gray-500"><%= truncate(channel.description, length: 50) %></div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                  <%= channel.channel_type.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= channel.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= channel.status.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= channel.channel_accesses.count %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= channel.signals.count %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= channel.created_at.strftime("%b %d, %Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end space-x-2">
                  <%= link_to admin_channel_path(channel), class: "text-blue-600 hover:text-blue-900" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_admin_channel_path(channel), class: "text-yellow-600 hover:text-yellow-900" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= button_to admin_channel_path(channel), method: :delete, class: "text-red-600 hover:text-red-900", data: { confirm: "Are you sure you want to delete this channel?" } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <div class="mt-6">
    <%= paginate @channels %>
  </div>
</div>

<% content_for :styles do %>
<style>
  .btn-primary {
    @apply inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500;
  }

  .btn-secondary {
    @apply inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500;
  }

  .pagination {
    @apply flex justify-center space-x-2;
  }

  .pagination a {
    @apply px-3 py-1 rounded-md text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50;
  }

  .pagination .current {
    @apply px-3 py-1 rounded-md text-sm font-medium text-white bg-blue-600 border border-blue-600;
  }

  .pagination .disabled {
    @apply px-3 py-1 rounded-md text-sm font-medium text-gray-400 bg-gray-100 border border-gray-200 cursor-not-allowed;
  }
</style>
<% end %>