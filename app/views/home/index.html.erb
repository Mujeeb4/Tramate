<!-- Landing page hero section -->
<section class="hero-section">
  <div class="container">
    <h1 class="hero-title">Transform Your Trading with Tramate</h1>
    <p class="hero-description">Automate your crypto trading by connecting signal providers directly to your exchange. No more manual trades, no more missed opportunities.</p>
    <div class="hero-buttons">
      <%= link_to "Get Started Free", "/auth/register", class: "btn btn-primary btn-large" %>
      <%= link_to "See How It Works", "#how-it-works", class: "btn btn-secondary btn-large" %>
    </div>
  </div>
</section>

<!-- Features section -->
<section class="features-section" id="features">
  <div class="container">
    <h2 class="section-title">Why Choose Tramate</h2>
    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon">
          <i class="feature-bolt"></i>
        </div>
        <h3 class="feature-title">Automated Trading</h3>
        <p class="feature-description">Connect your Binance account and let our system execute trades automatically based on signals from your trusted channels.</p>
      </div>
      
